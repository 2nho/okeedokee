<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="donation">
	<!-- 이번달 후원금액 -->
	<select id="selectMoney" parameterType="DonaVO" resultType="int">
		SELECT SUM(donation)
		FROM donation
		WHERE MONTH(date) like #{date}
	</select>
</mapper>